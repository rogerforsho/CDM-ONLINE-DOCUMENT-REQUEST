            // Sort table by column
            let historySortDirection = {};
            function sortHistoryTable(columnIndex) {
                const table = document.getElementById('historyTable');
                const tbody = document.getElementById('historyTableBody');
                const rows = Array.from(tbody.querySelectorAll('tr'));

                // Toggle sort direction
                historySortDirection[columnIndex] = !historySortDirection[columnIndex];
                const ascending = historySortDirection[columnIndex];

                rows.sort((a, b) => {
                    const aText = a.cells[columnIndex].textContent.trim();
                    const bText = b.cells[columnIndex].textContent.trim();

                    // Try to parse as date first
                    const aDate = new Date(aText);
                    const bDate = new Date(bText);

                    if (!isNaN(aDate) && !isNaN(bDate)) {
                        return ascending ? aDate - bDate : bDate - aDate;
                    }

                    // Otherwise compare as string
                    return ascending ?
                        aText.localeCompare(bText) :
                        bText.localeCompare(aText);
                });

                // Re-append sorted rows
                rows.forEach(row => tbody.appendChild(row));
            }

            // Add hover effect to table rows
            document.addEventListener('DOMContentLoaded', function() {
                const rows = document.querySelectorAll('.history-row');
