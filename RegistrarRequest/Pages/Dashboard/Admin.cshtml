            // Update count display
            function updateHistoryCount() {
                const rows = document.querySelectorAll('.history-row');
                const visibleRows = Array.from(rows).filter(row => row.style.display !== 'none');

                const visibleCountEl = document.getElementById('historyVisibleCount');
                const totalCountEl = document.getElementById('historyTotalCount');

                if (visibleCountEl) visibleCountEl.textContent = visibleRows.length;
                if (totalCountEl) totalCountEl.textContent = rows.length;
            }

            // Clear all filters
            function clearHistoryFilters() {
                document.getElementById('historySearchInput').value = '';
                document.getElementById('documentTypeFilter').value = 'all';
                document.getElementById('statusFilter').value = 'all';
                filterHistory();
