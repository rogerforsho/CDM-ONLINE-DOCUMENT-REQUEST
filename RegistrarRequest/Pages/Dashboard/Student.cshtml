    <script>
        // ✅ Payment Modal Functions
        function showPaymentModal(requestId, queueNumber, amount) {
            document.getElementById('modal-requestId').value = requestId;
            document.getElementById('modal-queueNumber').textContent = queueNumber;
            document.getElementById('modal-amount').textContent = parseFloat(amount).toFixed(2);

            // Update amounts in payment details
            document.getElementById('gcash-amount').textContent = parseFloat(amount).toFixed(2);
            document.getElementById('bank-amount').textContent = parseFloat(amount).toFixed(2);
            document.getElementById('cash-amount').textContent = parseFloat(amount).toFixed(2);
            document.getElementById('cash-queue').textContent = queueNumber;

            // Reset form and hide all payment details
            document.getElementById('paymentForm').reset();
            document.getElementById('gcash-details').style.display = 'none';
            document.getElementById('bank-details').style.display = 'none';
            document.getElementById('cash-details').style.display = 'none';

            // Show modal
            document.getElementById('paymentModal').style.display = 'flex';
        }

        function closePaymentModal() {
            document.getElementById('paymentModal').style.display = 'none';
            document.getElementById('paymentForm').reset();
            document.getElementById('gcash-details').style.display = 'none';
            document.getElementById('bank-details').style.display = 'none';
            document.getElementById('cash-details').style.display = 'none';
        }

        // ✅✅✅ CRITICAL: Payment method dropdown handler
        document.addEventListener('DOMContentLoaded', function() {
            const paymentMethodSelect = document.getElementById('paymentMethod');

            if (paymentMethodSelect) {
                paymentMethodSelect.addEventListener('change', function() {
                    console.log('Payment method changed to:', this.value);

                    // Hide all payment details first
                    document.getElementById('gcash-details').style.display = 'none';
                    document.getElementById('bank-details').style.display = 'none';
                    document.getElementById('cash-details').style.display = 'none';

                    // Show the selected payment method details
                    if (this.value === 'GCash') {
                        document.getElementById('gcash-details').style.display = 'block';
                    } else if (this.value === 'Bank Transfer') {
                        document.getElementById('bank-details').style.display = 'block';
                    } else if (this.value === 'Cash') {
                        document.getElementById('cash-details').style.display = 'block';
                    }
                });
            }
        });

        async function submitPayment(e) {
            e.preventDefault();

            const requestId = document.getElementById('modal-requestId').value;
            const paymentMethod = document.getElementById('paymentMethod').value;
            const referenceNumber = document.getElementById('referenceNumber').value;
            const paymentProof = document.getElementById('paymentProof').files[0];

            if (!paymentProof) {
                alert('Please upload payment proof');
                return;
            }

            const formData = new FormData();
            formData.append('requestId', requestId);
            formData.append('paymentMethod', paymentMethod);
            formData.append('referenceNumber', referenceNumber);
            formData.append('paymentProof', paymentProof);

            try {
                const submitBtn = document.querySelector('#paymentForm button[type="submit"]');
                const originalText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Uploading...';
                submitBtn.disabled = true;

                const response = await fetch('/api/Payment/Upload', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    alert('✅ Payment uploaded successfully!\nYour payment is now pending verification.');
                    closePaymentModal();
                    setTimeout(() => location.reload(), 1000);
                } else {
                    alert('❌ Error: ' + (result.message || 'Failed to upload payment'));
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }
            } catch (error) {
                console.error('Payment upload error:', error);
                alert('❌ Network error: ' + error.message);
                const submitBtn = document.querySelector('#paymentForm button[type="submit"]');
                submitBtn.innerHTML = '<i class="fas fa-check-circle"></i> Submit Payment';
                submitBtn.disabled = false;
            }
        }

        // Your existing functions below...
        function showSection(e, section) {
            e.preventDefault();
            document.querySelectorAll('.profile-section').forEach(s => s.classList.remove('active'));
            document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
            document.getElementById(section + '-section')?.classList.add('active');
            e.target.closest('.nav-link')?.classList.add('active');
        }

        async function submitRequest(e) {
            e.preventDefault();
            const selectElement = document.getElementById('documentType');
            const selectedOption = selectElement.options[selectElement.selectedIndex];
            const data = {
                documentTypeId: parseInt(selectElement.value),
                documentType: selectedOption.getAttribute('data-name'),
                purpose: document.getElementById('purpose').value,
                quantity: parseInt(document.getElementById('copies').value),
                deliveryMethod: document.getElementById('deliveryMethod').value,
                notes: document.getElementById('notes').value
            };

            try {
                const res = await fetch('/api/DocumentRequest/Submit', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                const json = await res.json();
                if (res.ok && json.success) {
                    alert(`Request submitted successfully!\nQueue #: ${json.queueNumber}`);
                    document.getElementById('requestForm').reset();
                    showSection({ preventDefault: () => {}, target: document.querySelector('[onclick*="dashboard"]') }, 'dashboard');
                    setTimeout(() => location.reload(), 800);
                } else {
                    alert('Error: ' + (json.message || 'Please try again'));
                }
            } catch (err) {
                console.error('Error:', err);
                alert('Network error: ' + err.message);
            }
        }
    </script>
