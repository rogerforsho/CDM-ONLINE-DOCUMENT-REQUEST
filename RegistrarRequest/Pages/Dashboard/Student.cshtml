<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script>
    function showSection(e, section) {
        e.preventDefault();
        document.querySelectorAll('.profile-section').forEach(s => s.classList.remove('active'));
        document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
        document.getElementById(section + '-section')?.classList.add('active');
        e.target.closest('.nav-link')?.classList.add('active');
    }
    async function submitRequest(e) {
        e.preventDefault();

        // Get the selected option element
        const selectElement = document.getElementById('documentType');
        const selectedOption = selectElement.options[selectElement.selectedIndex];

        const data = {
            documentTypeId: parseInt(selectElement.value),
            documentType: selectedOption.getAttribute('data-name'), // ADD THIS - sends the name
            purpose: document.getElementById('purpose').value,
            quantity: parseInt(document.getElementById('copies').value),
            deliveryMethod: document.getElementById('deliveryMethod').value,
            notes: document.getElementById('notes').value
        };

        console.log('Submitting request:', data);

        try {
            const res = await fetch('/api/DocumentRequest/Submit', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            const json = await res.json();
            if (res.ok && json.success) {
                alert(`Request submitted successfully!\nQueue #: ${json.queueNumber}`);
                document.getElementById('requestForm').reset();
                showSection({ preventDefault: () => {}, target: document.querySelector('[onclick*="dashboard"]') }, 'dashboard');
                setTimeout(() => location.reload(), 800);
            } else {
                alert('Error: ' + (json.message || 'Please try again'));
            }
        } catch (err) {
            console.error('Error:', err);
            alert('Network error: ' + err.message);
        }
    }

</script>
